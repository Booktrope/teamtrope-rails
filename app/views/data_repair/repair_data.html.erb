<div class="container">
  <h1>Data Repair Results</h1>
    <table class="table" id="data_repair_results_table">
      <thead>
        <th>Updated</th>
        <th class="book-title">Project</th>
        <th>Project Type</th>
        <th class="book-title"><%= @updated_column %></th>
        <th>Reason</th>
      </thead>
      <tbody>
       <% @updated_projects.each do | updated_item | %>
        <tr>
          <td>
            <span class="glyphicon glyphicon-<%= (updated_item[:updated] == true )? "ok" : "remove" %>"></span>
          </td>
          <td>
            <% unless updated_item[:project].nil? %>
              <%= link_to updated_item[:title], updated_item[:project], target: :blank %>
            <% else %>
              <%= updated_item[:title] %>
            <% end %>
          </td>
          <td><%= updated_item[:book_type] %></td>
          <td><%= updated_item[:updated_field] %></td>
          <td><%= updated_item[:reason] %></td>
        </tr>
       <% end %>
      </tbody>
    </table>
    <script>
      $("#data_repair_results_table").DataTable({ 'pageLength': '100'});
    </script>
</div>
