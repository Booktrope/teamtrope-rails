<h1>Approve Cover Art</h1>
<div class="row">
  <div class="col-md-6">
    <p>Note: This form to be submitted by Booktrope Management ONLY.</p>
    <%= simple_form_for @project, url: url_for(controller: 'projects', action: 'approve_cover_art',
                                               id: @project), html: { id: 'approve_cover_art' } do | f | %>
        <%= f.error_notification %>
        <%= hidden_field_tag :submitted_task_id, current_tab.task.id %>

        <label>Is Cover Approved? *</label>
        <%= f.collection_radio_buttons :cover_art_approval_decision,
                                       [[true, 'Yes'],
                                        [false, 'No']],
                                       :first, :last,
                                       :item_wrapper_tag => 'div',
                                       :item_wrapper_class => 'radio'

        %>

        <div id="cover_concept_notes_box" style="display:none;">
          <%= f.input :cover_concept_notes, as: :text,
                      label: 'Cover Concept Notes',
                      input_html: { rows: 10, cols: 50, id: 'cover_concept_notes', value:  '' }
          %>
        </div>

        <%= f.submit 'Submit' %>
    <% end %>
  </div>
</div>
