<h1>Final Manuscript</h1>
<div class="gf_browser_safari gform_wrapper">
	<%= simple_form_for @project,
				url: url_for(controller: 'projects', action: 'final_manuscript', id: @project),
				html: {id: "final_manuscript"} do | f | 
				%>
        <%= f.error_notification %>
        <%= hidden_field_tag :submitted_task_id, current_tab.task.id %>				
		<div>
			<span>Booktrope Staff Only</span>
		</div>
		<div class="gform_body">
		
			<ul>
			
				<li>
					<div>
						<%= f.input :final_pdf, label: 'Final PDF' , as: :file, required: true %>
					</div>
				</li>
				
				<li>
					<div>
						<%= f.input :final_doc_file, label: 'Final Word Doc', as: :file, required: true %>
					</div>
				</li>
				
			</ul>
			<%= f.submit "Submit" %>
		</div>
	<% end %>
</div>