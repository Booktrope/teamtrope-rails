<% provide(:title, @project.final_title) %>
    <img class="thumbalignright" src="https://teamtrope.com/wp-content/uploads/2013/07/A-Chorus-of-Wolves-Cover.jpg"><br/>
    <h1 class="entry-title"><%= @project.final_title %></h1><br />
    <%= link_to "Edit", edit_project_path(@project) %> | 
    <%= link_to "Back" , projects_path %>
    <div class="pcss3t pcss3t-icons-left  pcss3t-height-auto pcss3t-theme-3-all-white">			
      <label>Team: </label>     
      <label class='green'>
      	<% if @project.has_book_manager? %>
      		<%= link_to image_tag(@project.book_managers.first.member.profile.avatar.url(:thumb), size: "40x40", class: "avatar photo"), @project.book_managers.first.member %>
        <% else %>
        Needs Book Manager
        <% end %>
      </label>     
      <label class='yellow'>
      <% if @project.has_project_manager? %>
	      <%= link_to image_tag(@project.project_managers.first.member.profile.avatar.url(:thumb), size: "40x40", class: "avatar photo"), @project.project_managers.first.member %>
      <% else %>
      Needs Project Manager	
      <% end %>
      </label>      
      <label class='red'>
     	<% if @project.has_editor? %>
     		<%= link_to image_tag(@project.editors.first.member.profile.avatar.url(:thumb), size: "40x40", class: "avatar photo"), @project.editors.first.member %>
      <% else %>
      Needs Editor
      <% end %>
      </label>  
      <label class='red'>
     	<% if @project.has_proof_reader? %>
     		<%= link_to image_tag(@project.proof_readers.first.member.profile.avatar.url(:thumb), size: "40x40", class: "avatar photo"), @project.proof_readers.first.member %>
      <% else %>
      Needs Proof Reader
      <% end %>
      </label>      
      <label class='blue'>
     	<% if @project.has_cover_designer? %>
     		<%= link_to image_tag(@project.cover_designers.first.member.profile.avatar.url(:thumb), size: "40x40", class: "avatar photo"), @project.cover_designers.first.member %>
      <% else %>
      Needs Cover Designer
      <% end %>
      </label>
    </div>   
    <br/>    
    <a href='https://teamtrope.com/groups/the-key-to-everything/'>Link to Teamroom</a> <span> Genre: 
    <% isFirst = true %>
    <% @project.genres.each do | genre |%>
    	<%= ", " if !isFirst %>
    	<%= "#{genre.name}" %>
    	<% isFirst = false %>
    <% end %></span>
		<% merged_array = [] %>
		<% @project.current_tasks.each do | current_task | %>
		<% merged_array.concat(current_task.task.unlocked_tasks.map { |ut| ut.unlocked_task_id }) %>
		<% end %>
		<% merged_array.uniq! %>
<% @project.project_type.project_view.phases.includes(:tabs).each do | phase | %>
    <!-- rails tabs -->
    <div class="pcss3t pcss3t-icons-left  pcss3t-height-auto pcss3t-theme-3-<%= phase.color %>">
      <input type="radio" name="pcss3t0<%= phase.order %>" checked id="tab00<%= phase.order %>" <%= "class='tab-content-first'" if !isFirst %>>
      <label for="tab00<%= phase.order %>"><%= phase.name %><i class="<%= phase.icon %>"></i></label>
<% form_content = "" %>
<%= form_content %>
<% phase.tabs.includes(:task).each do | tab | %>
      <input type="radio" name="pcss3t0<%= phase.order %>" id="tab<%= tab.order+1 %>0<%= phase.order %>" class="tab-content-<%= tab.order+1 %>">
      <label <%=  "class=tab-inactive" unless merged_array.include? tab.task.id%> for="tab<%= tab.order+1 %>0<%= phase.order %>"><%= tab.task.name %><i class="<%= tab.task.icon %>"></i></label>
		<% form_content << " <li class='tab-content tab-content-" %>
		<% form_content << "#{tab.order+1}" %>
		<% form_content << " typography'>" %>
		<% partial_path = "projects/forms/#{tab.task.partial}" %>
		<% form_content += render partial_path %>
		<% form_content << "</li>" %>
<% end %>
		<ul>
<%= form_content.html_safe %></li>
		</ul>
	</div>
	<!--/ rails tabs -->
<% end %>
</div>	
		</div>