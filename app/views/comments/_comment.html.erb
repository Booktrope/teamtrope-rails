<li id="comment-<%= comment.id %>" class="comment byuser comment-author-inazajac even thread-even depth-1">
	<article id="div-comment-<%= comment.id %>" class="comment-body">
		<footer class="comment-meta">
			<div class="comment-author vcard">
				<img src="https://teamtrope.com/wp-content/uploads/avatars/363/a2bb4d2ec1b3288914cbe7a332cfbd5b-bpthumb.jpg" class="avatar user-363-avatar avatar-34 photo" width="34" height="34" alt="Avatar of Ina Zajac" />
				<b class="fn">
					<%= link_to comment.user.name, comment.user, class: "url", rel: "external nofollow" %>
				</b>
				<span class="says">says:</span>
			</div><!-- .comment-author -->
			
			<div class="comment-metadata">
				<a href="https://teamtrope.com/2014/11/amazon-inclusion-teamroom/comment-page-1/#comment-261">
					<%= time_tag(comment.created_at) %>
				</a>
				<% if can_edit_comment? comment.user %>
				<span class="edit-link">
					<%= link_to "Edit", edit_post_comment_path(@post, comment), class: "comment-edit-link" %>
				</span>
				<span class="edit-link">
				<%= link_to 'Delete', [comment.post, comment],
               method: :delete,
               class: "comment-edit-link",
               data: { confirm: 'Are you sure you want to delete this comment?' } %>
        </span>
        <% end %>
			</div><!-- .comment-metadata -->
		</footer><!-- .comment-meta -->
		
		<div class="comment-content">
			<%= comment.content %>
		</div><!-- .comment-content -->	
		
		<div class="reply"></div><!-- .reply -->
	</article><!-- .comment-body -->
</li><!-- #comment-## -->		