<h1>Approve Blurbs</h1>

<table id="approve_blurbs_table">
  <thead>
    <tr>
      <th>Project</th>
      <th>Blurb Notes</th>
      <th>Blurb Approval Decision</th>
      <th>Blurb Approval Date</th>
      <th>Blurb Last Updated</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @approve_blurbs.each do |approve_blurb| %>
      <tr>
        <td><%= link_to approve_blurb.project.title, approve_blurb.project %></td>
        <td><%= approve_blurb.blurb_notes %></td>
        <td><%= approve_blurb.blurb_approval_decision?? "Approved" : "Rejected" %></td>
        <td><%= approve_blurb.blurb_approval_date %></td>
        <td><%= approve_blurb.updated_at %></td>
        <td><%= link_to 'Show', approve_blurb %></td>
        <td><%= link_to 'Edit', edit_approve_blurb_path(approve_blurb) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $('#approve_blurbs_table').DataTable({"pageLength": 100});

</script>

