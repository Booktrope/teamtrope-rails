<h1>Current Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_tasks.each do |current_task| %>
      <tr>
        <td><%= current_task.project %></td>
        <td><%= current_task.task %></td>
        <td><%= link_to 'Show', current_task %></td>
        <td><%= link_to 'Edit', edit_current_task_path(current_task) %></td>
        <td><%= link_to 'Destroy', current_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Current task', new_current_task_path %>
