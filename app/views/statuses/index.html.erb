<% provide(:title, "Status Records") %>
<h1>Status Records</h1>
<%= link_to "new", new_status_path %>
<% @statuses.each do | status | %>
	<div>
		<%= link_to status.form_name, status %> | 
		<%= link_to "Edit", edit_status_path(status) %> |
		<%= link_to "Delete", status_path(status), method: :delete, data: {confirm: "Are you sure you want to delete this status?"}%>
	</div>
<% end %>
