<% provide(:title, "Edit Profile") %>
<h1>Edit Profile</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for @profile, :html => { :multipart => true } do |f| %>
			<%#= render 'fields', f: f %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.hidden_field :profile, value: @profile.id %>
			<%= f.file_field :avatar %><br />			
			<br />
			<br />
			<%= f.submit "Update my profile", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
