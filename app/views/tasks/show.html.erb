<p id="notice"><%= notice %></p>

<p>
  <strong>Workflow:</strong>
  <%= @task.workflow.name %>
</p>

<p>
  <strong>Next:</strong>
  <%= @task.next_id %>
</p>

<p>
  <strong>Rejected task:</strong>
  <%= @task.rejected_task_id %>
</p>

<p>
  <strong>Phase:</strong>
  <%= @task.phase_id %>
</p>

<p>
  <strong>Partial:</strong>
  <%= @task.partial %>
</p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Icon:</strong>
  <%= @task.icon %>
</p>

<p>
  <strong>Tab text:</strong>
  <%= @task.tab_text %>
</p>

<p>
  <strong>Intro video:</strong>
  <%= @task.intro_video %>
</p>

<p>
  <strong>Days to complete:</strong>
  <%= @task.days_to_complete %>
</p>

<p>
  <strong>Horizontal Order:</strong>
  <%= @task.horizontal_order %>
</p>

<p>
	<strong>Performer Roles:</strong>
	<% @task.performers.each_with_index do | performer, index | %>
		<%= performer.name %>
		<%= "," if !index != 0 && index != @task.performers.count-1 %> 
	<% end %>
</p>

<%= link_to 'Edit', edit_task_path(@task) %> |
