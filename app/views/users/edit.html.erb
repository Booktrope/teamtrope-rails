<% provide(:title, "Edit #{@user.name}") %>
<h1>Edit User</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for @user, :html => { :multipart => true } do |f| %>
			<%= render 'fields', f: f %><br />
			<%= f.submit "Update my profile", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
