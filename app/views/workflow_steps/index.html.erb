<h1>Listing workflow_steps</h1>

<table>
  <thead>
    <tr>
    	<th>ID</th>
      <th>Workflow</th>
      <th>Task</th>
      <th>Rejected Step</th>
      <th>Next Step</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflow_steps.each do |workflow_step| %>
      <tr>
	      <td><%= workflow_step.id %></td>
        <td><%= workflow_step.workflow.name %></td>
        <td><%= workflow_step.task.name %></td>
        <td><%= workflow_step.rejected_step_id %></td>
        <td><%= workflow_step.next_step_id %></td>
        <td><%= link_to 'Show', workflow_step %></td>
        <td><%= link_to 'Edit', edit_workflow_step_path(workflow_step) %></td>
        <td><%= link_to 'Destroy', workflow_step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workflow task', new_workflow_step_path %>
