<%= simple_form_for(@price_change_promotion) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_date, as: :date %>
    <%= f.input :end_date, as: :date %>
    <%= f.input :price_promotion %>
    <%= f.input :price_after_promotion %>
    <%= f.input :type_mask %>
    <%= f.input :sites %>
    <%= f.association :project %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
